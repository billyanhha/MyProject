#!/bin/bash

if [[ $1 == "install" ]]
then

	if [[ $2 != "" ]]
	then
	
		# Build app structure
		while read p; do
			mkdir -p ./$2/$p
		done < /usr/lib/node_modules/frontend/structure.txt

		# Clone repository into your app
		git clone https://github.com/fercik/app.git repo
		rsync -a repo/ $2
		rm -rf repo
	fi
	
fi

if [[ $1 == "update" ]]
then

	if [[ $2 != "" ]]
	then
	
		cd $2
		git pull origin master
		cd ..
	
	fi

fi
