# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'haml', :input => 'haml', :notifications => true do
	watch(/^.+(\.html\.haml)/)
end

guard 'sass', :input => 'css/sass', :output => 'css', :all_on_start => true, :style => :compressed

guard 'livereload', :host => 'localhost' do
	watch(/^.+(\.html\.haml)/)
	watch(/^.+(\.s[ac]ss)/)
	watch(/^.+(\.js)/)
end
